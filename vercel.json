{
  "version": 2,
  "builds": [
    {
      "src": "client/package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "client/build"
      }
    },
    {
      "src": "server/package.json",
      "use": "@vercel/node",
      "config": {
        "includeFiles": [
          "server//*.js",
          "server/.env",
          "server/db/connection.js",
          "server/routes/*.js",
          "server/controller/*.js"
        ]
      }
    }
  ],
  "routes": [
    { "src": "/(.*)", "dest": "/" },
  ]
}
